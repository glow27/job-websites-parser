<div style="height: 20px;"></div>
<div class="container">

  <ul class="pagination center">
    {{#if prev}}
    <li class="waves-effect"><a href="/?page={{prev}}"><i class="material-icons">chevron_left</i></a></li>
    {{else}}
    <li class="waves-effect"><a class="btn disabled" href=""><i class="material-icons">chevron_left</i></a></li>
    {{/if}}
    {{#each pages}}
    <li class="waves-effect" id="el{{num}}"><a href="/?page={{num}}">{{num}}</a></li>
    {{/each}}
    {{#if next}}
    <li class="waves-effect"><a href="/?page={{next}}"><i class="material-icons">chevron_right</i></a></li>
    {{else}}
    <li class="waves-effect"><a href="" class="btn disabled"><i class="material-icons">chevron_right</i></a></li>
    {{/if}}
  </ul>

</div>
